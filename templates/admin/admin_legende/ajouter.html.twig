{% extends '/admin/admin_base.html.twig' %}

{% block title %}{{ action }} une légende{% endblock %}

{% block body %}
    <div class="container">
        <h1>{{ action }} une légende</h1>
        {{  form_start(form) }}

        <div class="form-row">
            {% if legende is not null %}
                <img src="{{ asset('images/legendes/' ~ legende | lower | replace({' ': '_', "'": '-'}) ~ '.png') }}">
            {% endif %}
            {{  form_row(form.nom) }}
        </div>

        <div class="form-row">
            {{  form_row(form.specialite) }}
        </div>

        {{  form_end(form) }}
    </div>


{% endblock %}
