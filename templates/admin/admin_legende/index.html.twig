{% extends '/admin/admin_base.html.twig' %}

{% block title %}Légendes{% endblock %}

{% block body %}

    <div class="container-admin">

        <h1>Liste des légendes</h1>

        <table class="table" >
            <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Nom</th>
                <th scope="col">Spécialité</th>
                <th scope="col">Actions</th>
                <th scope="col">
                    <a href="{{ path('admin_legende_ajouter') }}">➕</a>
                </th>

            </tr>
            </thead>

            <tbody>
            {% for legende in legendes %}
                <tr>
                    <th scope="row">{{ legende.id }}</th>
                    <td class="img-name">
                        <img src="{{ asset('images/legendes/' ~ legende.nom | lower | replace({' ': '_', "'": '-'}) ~ '.png') }}">
                        {{ legende.nom }}
                    </td>
                    <td >
                        {{ legende.specialite }}
                    </td>
                    <td>
                        <a href="{{ path('admin_legende_modifier', {'id': legende.id}) }}">🖊️</a>
                        <a onclick="return confirm('Êtes-vous sûr de vouloir supprimer {{ legende.nom }} ? Attention cette action est irréversible.')" href="{{ path('admin_legende_supprimer', {'id': legende.id}) }}">🗑️</a>
                    </td>
                </tr>
            {%  endfor %}
            </tbody>
        </table>

    </div>
{% endblock %}
