{% extends '/admin/admin_base.html.twig' %}

{% block title %}{{ action }} un item{% endblock %}

{% block body %}
    <div class="container">
        <h1>{{ action }} un item</h1>
        {{  form_start(form) }}

        <div class="form-row">
            {% if item is not null %}
                <img src="{{ asset('images/items/' ~ item | lower | replace({' ': '_', "'": '-', 'é': 'e', 'î': 'i' } ) ~ '.png') }}">
            {% endif %}
            {{  form_row(form.nom) }}
        </div>

        <div class="form-row">
            {{  form_row(form.description) }}
        </div>

        {{  form_end(form) }}
    </div>


{% endblock %}
