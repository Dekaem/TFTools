{% extends 'app/base.html.twig' %}

{% block title %}Les compositions{% endblock %}

{% block body %}

<div class="container-page">
    <h1>Les compositions</h1>
    <div class="row">
        <div class="col-sm-6">
            {%  for compo in compositions %}
                <div class="card-compo">
                        <span>{{ compo.nom }}</span>
                    {%  for champ in compo.champions %}
                        <div class="card-champ">
                            <img class="card-img-top" src="{{ asset('images/champions/' ~ champ.nom | lower | replace({' ': '_', "'": '-'}) ~ '.png') }}" alt=""/>
                            <div class="card-body">
                                <h5 class="card-title">{{ champ.nom }}</h5>
                                <p class="card-text">
                                    {%  for origine in champ.origines %}
                                        {{ origine.nom }}
                                    {%  endfor %}
                                </p>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            {% endfor %}
        </div>
    </div>
</div>
{% endblock %}
